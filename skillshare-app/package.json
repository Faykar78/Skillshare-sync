{
  "name": "skillshare-sync",
  "version": "1.0.0",
  "description": "Personal offline learning companion for Skillshare",
  "main": "main.js",
  "author": "Faykar78 <faykar78@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.skillshare.sync",
    "productName": "Skillshare Sync",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Education",
      "icon": "icon.png",
      "maintainer": "Faykar78 <faykar78@gmail.com>"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1"
  }
}